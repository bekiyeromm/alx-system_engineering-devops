#!/usr/bin/env bash
# seven fields from /etc/passwd stored in $f1,f2...,$f7
while IFS=: read -r f1 f2 f3 f4 f5 f6 f7
do
    echo "The user $f1 is part of the $f4 gang, lives in $f6 and rides $f7. $f3's place is protected
   by the passcode $f2, more info about the user here: $f5"
done < /etc/passwd
